<!-- Start individual header -->
<header class="navbar_index">
  <div class="content_navbar">
  <%= link_to "HOME", root_path %>
    <%= link_to 'IMAGES', pictures_path,  class: 'content-navbar' %>
    <%= link_to 'CONTACT', contact_path,  class: 'content-navbar' %>
    <div class="instagram_icon_div">
      <%= link_to image_tag('instagram.png', alt: "", class: "instagram_icon"), "https://www.instagram.com/lisa_luft/", :target => "_blank"%>
      <%= link_to image_tag('instagram_hover.png', alt: "", class: "instagram_icon"), "https://www.instagram.com/lisa_luft/", :target => "_blank"%>
    </div>
  </div>
</header>
<!-- End individual header -->

<div class="flexbox">
  <div class="container-fluid">
    <div class="row align-items-center">
      <% @prints.each do |print| %>
        <div class="col-xs-12 col-sm-6 col-lg-4 card-content">

<!-- Start of Print Card -->
          <%= link_to print_path(print), class: "pictures_link" do %>
            <% if current_user.nil? == false %>
                <p class="bin"><%= link_to image_tag('bin2.png', class: "delete_picture_card"), print_path(print.id), method: :delete, data: {confirm: 'are you sure?'}, class: "delete_pictures_link" %><p>
            <% end %>
        <div class="cards">
            <%= cl_image_tag(print.photo.key, crop: :fill, width: 400) %>
            <div class="card-category">
                <div class="content-text">
                    <h2 class="card-headline"><%= print.name %></h2>
                    <p class ="description-card-text"><%= print.description %></p>
                </div>
            </div>
        </div>
            <% end %>
<!-- End of Print Card -->

        </div>
      <% end %>
    </div>
  </div>
</div>
