<!DOCTYPE html>
<html>
  <head>
    <title>LisaWebsite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar_index">
      <div class="content_navbar">
        <a href="">ABOUT</a>
        <div class="instagram_icon_div">
          <%= link_to image_tag('instagram', alt: "", class: "instagram_icon"), "https://www.instagram.com/lisa_luft/", :target => "_blank"%>
          <%= link_to image_tag('instagram_hover', alt: "", class: "instagram_icon"), "https://www.instagram.com/lisa_luft/", :target => "_blank"%>
        </div>
      </div>
    </header>
    <%= yield %>
    <%= render 'shared/flashes' %>
  </body>
</html>
