<div class="flexbox">
  <div class="container">
    <div class="cards">
      <% @pictures.each do |picture| %>
        <div class="row">
            <div class="col-sm-6 col-lg-4 col-xs-12">
            <%= picture.name %>
            <%= link_to picture_path(picture), class: "picture_link" do %>
            <%= cl_image_tag(picture.photo.key, crop: :fill) %>
            <%= picture.description %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    </div >
  </div>
</div>

